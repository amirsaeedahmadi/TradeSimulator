<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TradeSim" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/amiri</item>
    </style>

    <style name="Theme.TradeSim.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TradeSim.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TradeSim.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.TradeSim.Fullscreen" parent="Theme.TradeSim">
        <item name="android:actionBarStyle">@style/Widget.Theme.TradeSim.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.TradeSim.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.TradeSim.NoActionBar.FullScreen" parent="@style/Theme.TradeSim.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:imeFullscreenBackground">@color/purple_200</item>
        <item name="fullscreenBackgroundColor">@color/purple_200</item>
        <item name="android:panelFullBackground">@color/purple_200</item>
        <item name="actionBarWidgetTheme">@color/purple_200</item>
        <item name="android:topOffset">0dp</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--item name="android:windowContentOverlay">@null</item-->
    </style>

    <style name="Theme.Main" parent="@style/Theme.TradeSim.NoActionBar">
<!--        <item name="colorPrimary">@color/purple_200</item>-->
<!--       <item name="colorPrimaryVariant">@color/darkBar</item>-->
        <item name="background">@drawable/toolbar</item>
<!--        <item name="android:windowBackground">@drawable/toolbar</item>-->
<!--        <item name="android:background">@drawable/toolbar</item>-->
<!--        <item name="toolbarStyle">@drawable/toolbar</item>-->
<!--        <item name="android:windowTitleBackgroundStyle">@drawable/toolbar</item>-->
        <item name="statusBarBackground">@drawable/toolbar</item>
        <item name="statusBarForeground">@drawable/toolbar</item>
<!--        <item name="android:statusBarColor">#00FFFFFF</item>-->
        <item name="android:statusBarColor" tools:targetApi="l"> @color/lightBar</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:hideOnContentScroll">false</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
<!--        <item name="android:windowLightStatusBar">false</item>-->
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowFullscreen"></item>-->
    </style>
    <style name="Theme.TradeSim.Start" parent="@style/Theme.TradeSim.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l"> @color/lightBar</item>
        <item name="android:hideOnContentScroll">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>